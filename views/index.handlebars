<div class="container">
    <div class="heading">
        <h1 class="text-center">
            <strong>
                ToySwap
            </strong>
        </h1>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <h2>Data from DB</h2>
            {{#each inventory}}
            <div class="toyDiv">
                <ul>
                    <li>{{title}}</li>
                    <li>{{product_condition}}</li>
                    <li>{{availability}}</li>
                    <li>${{price}}</li>
                    <li>{{url}}</li>
                    <li>{{description}}</li>
                </ul>
                 <button class="btn btn-info view" id="btn-{{id}}-{{UserID}}">View</button>
            </div>
            {{/each}}
        </div>
        <div class="col-lg-6 offset-lg-3" id="form">
            <form class="create-form" method="POST" action="/toys">
                <label for="title">Title of Toy:</label>
                <input type="text" class="form-control" id="title">
                <label for="product_condition">Condition of Toy:</label>
                <input type="text" class="form-control" id="product_condition">
                <label for="availability">Quantity you'd like to submit:</label>
                <input type="text" class="form-control" id="availability">
                <label for="price">Retail Price:</label>
                <input type="text" class="form-control" id="price">
                {{!-- will need to change input type to image and figure out how to store the image into DB --}}
                <label for="url">Image URL:</label>
                <input type="text" class="form-control" id="url">
                <br>
                <label for="description">Description of Toy:</label>
                {{!-- <input type="text" class="form-control"> --}}
                <textarea id="description" name="burger" rows="3" cols="60">
                </textarea>
                <br>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>

            {{!-- <p id="enter-burger">Enter a burger you'd like to eat, then click submit</p> --}}
        </div>
    </div>
</div>
